  "keywords": [
    "rolling",
    "backend"
  ],
  "author": "Ezequiel Amin",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-angular": "^18.4.4",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gradient-string": "^2.0.2",
    "husky": "^8.0.3",
    "prettier": "^3.2.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "env-var": "^7.4.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.11.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "prisma": "^5.8.1"
  },
  "engines": {
    "node": ">=20.6.0"
  }

{
  "name": "express-backend-example",
  "version": "1.0.0",
  "description": "Rolling backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "prisma db pull && prisma generate && esbuild src/index.js --bundle --platform=node --outfile=dist/index.cjs --minify",
    "start": "node --env-file=.env dist/index.cjs",
    "dev": "node --watch --env-file=.env.development src/index.js",
    "lint": "node config/pre-build.js --ignore-build --fix",
    "prettier:check": "prettier -c .",
    "prettier:write": "prettier -w .",
    "prisma:reset": "prisma db pull && prisma generate",
    "cloudinary:reset": "node --env-file=.env prisma/deleteCloudinary.js",
    "test": "node --env-file=.env.test --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "test:reset": "node --env-file=.env.test ./src/testing/resetDatabase.js && node --env-file=.env.test --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles"
  },
  "author": "Ezequiel Amin & Valentina Ormaechea",
  "license": "ISC",
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-angular": "^18.6.1",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gradient-string": "^2.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "@prisma/client": "5.10.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "datauri": "^4.1.0",
    "dayjs": "^1.11.10",
    "env-var": "^7.4.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "prisma": "^5.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ua-parser-js": "^1.0.37"
  },
  "engines": {
    "node": ">=20.6.0"
  }
}
